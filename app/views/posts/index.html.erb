<div class="container bigtitle">
  <h1 style="text-align: center">BIG WORDS GO HERE</h1>
  <h2 style="text-align: center">...LIKE REALLY BIG</h2>
  <hr style="opacity: 0.5">
</div>
<div class="container feed">
<% if @post %>
  <% @post.each do |post| %>
    <!--<div class="col-xs-2 hidden-sm hidden-md hidden-lg hidden-xl"></div>-->
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 col-xl-2">
      <div class="post">
        <div class="post-image thumbnail">
         <img src="<%= post.image %>">
        </div>
        <div class="post-title">
          <h5><%= link_to post.title, post_path(post) %></h5>
        </div>

        <!--<hr>-->
        <% if post.body.length > 150 %>
          <h6><%= post.body[0, 150] %>...</h6>
        <% else %>
          <h6><%= post.body %></h6>
        <% end %>
        <div class="post-date"><%= post.created_at.strftime("%m %d %Y") %></div>
        <div class="post-likes"><%= post.likes %> ðŸ’œ</div>
      </div>
    </div>
  <% end %>
<% end %>
</div>